{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MdsfConfig",
  "type": "object",
  "required": ["languages"],
  "properties": {
    "$schema": {
      "default": "https://raw.githubusercontent.com/hougesen/mdsf/main/schemas/v0.0.9/mdsf.schema.json",
      "type": "string"
    },
    "format_finished_document": {
      "description": "Format the processed document with the selected markdown formatter.",
      "default": false,
      "type": "boolean"
    },
    "javascript_runtime": {
      "description": "Set npm script runner runtime.\n\nShould be considered experimental since not all tools support being run using Bun/Deno.\n\n`node -> npx`\n\n`bun -> bunx`\n\n`deno -> deno run`",
      "default": "node",
      "allOf": [
        {
          "$ref": "#/definitions/JavaScriptRuntime"
        }
      ]
    },
    "languages": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/MdsfFormatter_for_Tool"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "JavaScriptRuntime": {
      "type": "string",
      "enum": ["bun", "deno", "node"]
    },
    "MdsfFormatter_for_Tool": {
      "anyOf": [
        {
          "$ref": "#/definitions/Tool"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/MdsfFormatter_for_Tool"
          }
        }
      ]
    },
    "Tool": {
      "type": "string",
      "enum": [
        "prettier",
        "biome",
        "deno_fmt",
        "clang-format",
        "standardjs",
        "gofmt",
        "gofumpt",
        "goimports",
        "goimports-reviser",
        "crlfmt",
        "gci",
        "golines"
      ]
    }
  }
}
