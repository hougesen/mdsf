{
  "name": "mdsf",
  "displayName": "mdsf",
  "publisher": "hougesen",
  "description": "Format markdown code blocks using mdsf",
  "version": "0.11.1-next",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Formatters",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdsf.showTerminalOutput",
        "title": "Show mdsf output",
        "category": "mdsf"
      }
    ]
  },
  "languages": [
    {
      "id": "ignore",
      "extensions": [
        ".mdsfignore"
      ]
    }
  ],
  "homepage": "https://github.com/hougesen/mdsf",
  "author": {
    "email": "mads@mhouge.dk",
    "name": "Mads Hougesen",
    "url": "https://mhouge.dk"
  },
  "license": "MIT",
  "keywords": [
    "formatter",
    "linter",
    "markdown",
    "mdsf"
  ],
  "bugs": {
    "url": "https://github.com/hougesen/mdsf/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hougesen/mdsf.git",
    "directory": "mdsf"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint --fix .",
    "lint:biome": "biome check",
    "lint:biome:fix": "biome check --write",
    "lint": "npm run lint:biome && npm run lint:eslint",
    "lint:fix": "npm run lint:biome:fix && npm run lint:eslint:fix",
    "test": "vscode-test",
    "test:coverage": "vscode-test --coverage --coverage-reporter codecov"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@eslint/js": "^9.39.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.50.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
