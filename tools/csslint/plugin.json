{
  "$schema": "../tool.schema.json",
  "binary": "csslint",
  "categories": ["linter"],
  "commands": {
    "": {
      "arguments": ["--quiet", "$PATH"],
      "tests": [
        {
          "language": "css",
          "test_input": "body {\n  background: red;\n}\n",
          "test_output": "body {\n  background: red;\n}\n"
        }
      ]
    }
  },
  "description": "Automated linting of Cascading Stylesheets",
  "homepage": "https://github.com/csslint/csslint",
  "languages": ["css"],
  "packages": {
    "npm": {
      "package": "csslint"
    }
  }
}
