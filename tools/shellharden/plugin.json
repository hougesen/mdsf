{
  "$schema": "../tool.schema.json",
  "binary": "shellharden",
  "categories": ["linter"],
  "commands": {
    "": {
      "arguments": ["--transform", "--replace", "$PATH"]
    }
  },
  "description": "The corrective bash syntax highlighter",
  "homepage": "https://github.com/anordal/shellharden",
  "languages": ["bash", "shell"],
  "packages": {
    "brew": {
      "package": "shellharden"
    },
    "cargo": "shellharden"
  }
}
