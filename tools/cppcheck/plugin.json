{
  "$schema": "../tool.schema.json",
  "binary": "cppcheck",
  "categories": ["linter"],
  "commands": {
    "": {
      "arguments": ["$PATH"],
      "tests": [
        {
          "language": "cpp",
          "test_input": "int add(int a, int b) { return a + b; }\n",
          "test_output": "int add(int a, int b) { return a + b; }\n"
        }
      ]
    }
  },
  "description": "Cppcheck is a static analysis tool for C/C++ code",
  "homepage": "https://cppcheck.sourceforge.io/",
  "languages": ["c", "c++"],
  "packages": {
    "apt": {
      "package": "cppcheck"
    },
    "brew": {
      "package": "cppcheck"
    }
  }
}
