{
  "$schema": "../tool.schema.json",
  "binary": "hlint",
  "categories": ["linter"],
  "commands": {
    "": {
      "arguments": ["$PATH"],
      "tests": [
        {
          "language": "haskell",
          "test_input": "add :: Int -> Int -> Int\nadd a b = a + b",
          "test_output": "add :: Int -> Int -> Int\nadd a b = a + b"
        }
      ]
    }
  },
  "description": "Haskell source code suggestions",
  "homepage": "https://github.com/ndmitchell/hlint",
  "languages": ["haskell"],
  "packages": {
    "brew": {
      "package": "hlint"
    },
    "cabal": {
      "package": "hlint"
    },
    "stack": {
      "package": "hlint"
    }
  }
}
