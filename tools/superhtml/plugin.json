{
  "$schema": "../tool.schema.json",
  "binary": "superhtml",
  "categories": ["formatter"],
  "commands": {
    "fmt": {
      "arguments": ["fmt", "$PATH"],
      "ignore_output": false,
      "tests": [
        {
          "language": "html",
          "test_input": "<div>\n                    <p>\n                    Mads was here\n                    </p>\n        </div>",
          "test_output": "<div>\n  <p>\n    Mads was here\n  </p>\n</div>"
        }
      ]
    }
  },
  "description": "HTML Language Server & Templating Language Library",
  "homepage": "https://github.com/kristoff-it/superhtml",
  "languages": ["html"]
}
