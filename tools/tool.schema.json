{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Tool",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "default": "../tool.schema.json"
    },
    "binary": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "commands": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/ToolCommand"
      }
    },
    "deprecated": {
      "type": "boolean"
    },
    "description": {
      "type": "string",
      "default": ""
    },
    "disable_ci_package_install": {
      "type": "boolean"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "default": ""
    },
    "languages": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "name": {
      "type": ["string", "null"]
    },
    "packages": {
      "$ref": "#/$defs/ToolPackages",
      "default": {}
    }
  },
  "additionalProperties": false,
  "required": ["binary", "commands"],
  "$defs": {
    "ToolCommand": {
      "type": "object",
      "properties": {
        "arguments": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "deprecated": {
          "type": "boolean"
        },
        "description": {
          "type": ["string", "null"]
        },
        "homepage": {
          "type": ["string", "null"],
          "format": "uri"
        },
        "stdin": {
          "type": "boolean"
        },
        "tests": {
          "type": "array",
          "default": [],
          "items": {
            "$ref": "#/$defs/ToolCommandTest"
          }
        }
      },
      "additionalProperties": false,
      "required": ["arguments"]
    },
    "ToolCommandTest": {
      "type": "object",
      "properties": {
        "disabled": {
          "type": "boolean"
        },
        "language": {
          "description": "Codeblock language used when generating tests",
          "type": "string"
        },
        "test_input": {
          "type": "string"
        },
        "test_output": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["language", "test_input", "test_output"]
    },
    "ToolPackages": {
      "type": "object",
      "properties": {
        "apt": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesApt"
            },
            {
              "type": "null"
            }
          ]
        },
        "brew": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesBrew"
            },
            {
              "type": "null"
            }
          ]
        },
        "cabal": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesCabal"
            },
            {
              "type": "null"
            }
          ]
        },
        "cargo": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesCargo"
            },
            {
              "type": "null"
            }
          ]
        },
        "composer": {
          "description": "Binary name if installed through composer",
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesComposer"
            },
            {
              "type": "null"
            }
          ]
        },
        "coursier": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesCoursier"
            },
            {
              "type": "null"
            }
          ]
        },
        "dotnet": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesDotnet"
            },
            {
              "type": "null"
            }
          ]
        },
        "dub": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesDub"
            },
            {
              "type": "null"
            }
          ]
        },
        "gem": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesGem"
            },
            {
              "type": "null"
            }
          ]
        },
        "go": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesGo"
            },
            {
              "type": "null"
            }
          ]
        },
        "julia": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesJulia"
            },
            {
              "type": "null"
            }
          ]
        },
        "luarocks": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesLuarocks"
            },
            {
              "type": "null"
            }
          ]
        },
        "nimble": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesNimble"
            },
            {
              "type": "null"
            }
          ]
        },
        "npm": {
          "description": "Name of package on npm, if published there.",
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesNpm"
            },
            {
              "type": "null"
            }
          ]
        },
        "opam": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesOpam"
            },
            {
              "type": "null"
            }
          ]
        },
        "pip": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesPip"
            },
            {
              "type": "null"
            }
          ]
        },
        "stack": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolPackagesStack"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "ToolPackagesApt": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesBrew": {
      "type": "object",
      "properties": {
        "cask": {
          "type": "boolean"
        },
        "package": {
          "type": "string"
        },
        "tap": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesCabal": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesCargo": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesComposer": {
      "type": "object",
      "properties": {
        "binary": {
          "type": "string"
        },
        "package": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false,
      "required": ["binary"]
    },
    "ToolPackagesCoursier": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesDotnet": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesDub": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesGem": {
      "type": "object",
      "properties": {
        "disable_gem_exec": {
          "type": "boolean"
        },
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesGo": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesJulia": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesLuarocks": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesNimble": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesNpm": {
      "type": "object",
      "properties": {
        "disable_bunx": {
          "type": "boolean"
        },
        "disable_deno_run": {
          "type": "boolean"
        },
        "disable_npx": {
          "type": "boolean"
        },
        "disable_pnpm_dlx": {
          "type": "boolean"
        },
        "disable_yarn_exec": {
          "type": "boolean"
        },
        "executable": {
          "type": ["string", "null"]
        },
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesOpam": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesPip": {
      "type": "object",
      "properties": {
        "disable_pipx_run": {
          "type": "boolean"
        },
        "disable_uv_tool_run": {
          "type": "boolean"
        },
        "executable": {
          "type": ["string", "null"]
        },
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    },
    "ToolPackagesStack": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["package"]
    }
  }
}
