{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tool",
  "type": "object",
  "required": [
    "$schema",
    "binary",
    "categories",
    "commands",
    "description",
    "homepage",
    "languages"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "binary": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "commands": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/ToolCommand"
      }
    },
    "description": {
      "type": "string"
    },
    "disable_ci_tests": {
      "type": ["boolean", "null"]
    },
    "homepage": {
      "type": "string"
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "name": {
      "type": ["string", "null"]
    },
    "packages": {
      "$ref": "#/definitions/ToolPackages"
    },
    "php": {
      "description": "Binary name if installed through composer",
      "type": ["string", "null"]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "ToolCommand": {
      "type": "object",
      "required": ["arguments"],
      "properties": {
        "arguments": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": ["string", "null"]
        },
        "homepage": {
          "type": ["string", "null"]
        },
        "tests": {
          "type": ["array", "null"],
          "items": {
            "$ref": "#/definitions/ToolCommandTest"
          }
        }
      },
      "additionalProperties": false
    },
    "ToolCommandTest": {
      "type": "object",
      "required": ["language", "test_input"],
      "properties": {
        "language": {
          "description": "Codeblock language used when generating tests",
          "type": "string"
        },
        "test_input": {
          "type": "string"
        },
        "test_output": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    },
    "ToolPackages": {
      "type": "object",
      "properties": {
        "apt": {
          "type": ["string", "null"]
        },
        "brew": {
          "anyOf": [
            {
              "$ref": "#/definitions/ToolPackagesBrew"
            },
            {
              "type": "null"
            }
          ]
        },
        "cabal": {
          "type": ["string", "null"]
        },
        "cargo": {
          "type": ["string", "null"]
        },
        "coursier": {
          "type": ["string", "null"]
        },
        "dotnet": {
          "type": ["string", "null"]
        },
        "gem": {
          "type": ["string", "null"]
        },
        "go": {
          "type": ["string", "null"]
        },
        "julia": {
          "type": ["string", "null"]
        },
        "luarocks": {
          "type": ["string", "null"]
        },
        "nimble": {
          "type": ["string", "null"]
        },
        "npm": {
          "description": "Name of package on npm, if published there.",
          "type": ["string", "null"]
        },
        "opam": {
          "type": ["string", "null"]
        },
        "pip": {
          "type": ["string", "null"]
        },
        "stack": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    },
    "ToolPackagesBrew": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "tap": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    }
  }
}
