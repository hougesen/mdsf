{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tool",
  "type": "object",
  "required": [
    "$schema",
    "binary",
    "categories",
    "commands",
    "description",
    "homepage",
    "languages"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "binary": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "commands": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/ToolCommand"
      }
    },
    "description": {
      "type": "string"
    },
    "homepage": {
      "type": "string"
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "name": {
      "type": ["string", "null"]
    },
    "npm": {
      "description": "Name of package on npm, if published there.",
      "type": ["string", "null"]
    },
    "php": {
      "description": "Binary name if installed through composer",
      "type": ["string", "null"]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "ToolCommand": {
      "type": "object",
      "required": ["arguments", "ignore_output"],
      "properties": {
        "arguments": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": ["string", "null"]
        },
        "homepage": {
          "type": ["string", "null"]
        },
        "ignore_output": {
          "description": "Whether to ignore the output of the command execution",
          "type": "boolean"
        },
        "tests": {
          "type": ["array", "null"],
          "items": {
            "$ref": "#/definitions/ToolCommandTest"
          }
        }
      },
      "additionalProperties": false
    },
    "ToolCommandTest": {
      "type": "object",
      "required": ["language", "test_input"],
      "properties": {
        "language": {
          "description": "Codeblock language used when generating tests",
          "type": "string"
        },
        "test_input": {
          "type": "string"
        },
        "test_output": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    }
  }
}
