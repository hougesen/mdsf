{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tool",
  "type": "object",
  "required": ["binary", "commands"],
  "properties": {
    "$schema": {
      "default": "../tool.schema.json",
      "type": "string"
    },
    "binary": {
      "type": "string"
    },
    "categories": {
      "default": [],
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "commands": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/ToolCommand"
      }
    },
    "deprecated": {
      "type": "boolean"
    },
    "description": {
      "default": "",
      "type": "string"
    },
    "disable_ci_package_install": {
      "type": "boolean"
    },
    "homepage": {
      "default": "",
      "type": "string",
      "format": "uri"
    },
    "languages": {
      "default": [],
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "name": {
      "type": ["string", "null"]
    },
    "packages": {
      "default": {},
      "allOf": [
        {
          "$ref": "#/definitions/ToolPackages"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "ToolCommand": {
      "type": "object",
      "required": ["arguments"],
      "properties": {
        "arguments": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "deprecated": {
          "type": "boolean"
        },
        "description": {
          "type": ["string", "null"]
        },
        "homepage": {
          "type": ["string", "null"],
          "format": "uri"
        },
        "stdin": {
          "type": "boolean"
        },
        "tests": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ToolCommandTest"
          }
        }
      },
      "additionalProperties": false
    },
    "ToolCommandTest": {
      "type": "object",
      "required": ["language", "test_input", "test_output"],
      "properties": {
        "language": {
          "description": "Codeblock language used when generating tests",
          "type": "string"
        },
        "test_input": {
          "type": "string"
        },
        "test_output": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "ToolPackages": {
      "type": "object",
      "properties": {
        "apt": {
          "type": ["string", "null"]
        },
        "brew": {
          "anyOf": [
            {
              "$ref": "#/definitions/ToolPackagesBrew"
            },
            {
              "type": "null"
            }
          ]
        },
        "cabal": {
          "type": ["string", "null"]
        },
        "cargo": {
          "type": ["string", "null"]
        },
        "composer": {
          "description": "Binary name if installed through composer",
          "anyOf": [
            {
              "$ref": "#/definitions/ToolPackagesComposer"
            },
            {
              "type": "null"
            }
          ]
        },
        "coursier": {
          "type": ["string", "null"]
        },
        "dotnet": {
          "type": ["string", "null"]
        },
        "dub": {
          "type": ["string", "null"]
        },
        "gem": {
          "anyOf": [
            {
              "$ref": "#/definitions/ToolPackagesGem"
            },
            {
              "type": "null"
            }
          ]
        },
        "go": {
          "type": ["string", "null"]
        },
        "julia": {
          "type": ["string", "null"]
        },
        "luarocks": {
          "type": ["string", "null"]
        },
        "nimble": {
          "type": ["string", "null"]
        },
        "npm": {
          "description": "Name of package on npm, if published there.",
          "type": ["string", "null"]
        },
        "opam": {
          "type": ["string", "null"]
        },
        "pip": {
          "type": ["string", "null"]
        },
        "stack": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    },
    "ToolPackagesBrew": {
      "type": "object",
      "required": ["package"],
      "properties": {
        "package": {
          "type": "string"
        },
        "tap": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    },
    "ToolPackagesComposer": {
      "type": "object",
      "required": ["binary"],
      "properties": {
        "binary": {
          "type": "string"
        },
        "package": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    },
    "ToolPackagesGem": {
      "type": "object",
      "required": ["package"],
      "properties": {
        "disable_gem_exec": {
          "type": "boolean"
        },
        "package": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
