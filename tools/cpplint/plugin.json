{
  "$schema": "../tool.schema.json",
  "binary": "cpplint",
  "categories": ["linter"],
  "commands": {
    "": {
      "arguments": ["--quiet", "$PATH"],
      "tests": [
        {
          "language": "cpp",
          "test_input": "// Copyright 2025 Mads Hougesen\nint add(int a, int b) { return a + b; }\n",
          "test_output": "// Copyright 2025 Mads Hougesen\nint add(int a, int b) { return a + b; }\n"
        }
      ]
    }
  },
  "description": "Static code checker for C++",
  "homepage": "https://github.com/cpplint/cpplint",
  "languages": ["c++"],
  "packages": {
    "apt": {
      "package": "cpplint"
    },
    "brew": {
      "package": "cpplint"
    },
    "pip": {
      "package": "cpplint"
    }
  }
}
