{
  "$schema": "../tool.schema.json",
  "binary": "reorder-python-imports",
  "categories": ["formatter"],
  "commands": {
    "": {
      "arguments": ["--exit-zero-even-if-changed", "$PATH"],
      "tests": [
        {
          "language": "python",
          "test_input": "import sys\nimport pyramid\nimport reorder_python_imports",
          "test_output": "import sys\n\nimport pyramid\nimport reorder_python_imports\n"
        }
      ]
    }
  },
  "description": "Rewrites source to reorder python imports",
  "homepage": "https://github.com/asottile/reorder-python-imports",
  "languages": ["python"],
  "packages": {
    "brew": {
      "package": "reorder-python-imports"
    },
    "pip": {
      "package": "reorder-python-imports"
    }
  }
}
