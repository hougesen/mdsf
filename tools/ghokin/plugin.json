{
  "$schema": "../tool.schema.json",
  "binary": "ghokin",
  "categories": ["formatter"],
  "commands": {
    "check": {
      "arguments": ["check", "$PATH"],
      "tests": []
    },
    "fmt": {
      "arguments": ["fmt", "replace", "$PATH"],
      "tests": []
    }
  },
  "description": "Parallelized formatter with no external dependencies for gherkin (cucumber, behat...)",
  "homepage": "https://github.com/antham/ghokin",
  "languages": ["behat", "cucumber", "gherkin"],
  "packages": {
    "go": {
      "package": "github.com/antham/ghokin@latest"
    }
  }
}
