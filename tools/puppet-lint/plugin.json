{
  "$schema": "../tool.schema.json",
  "binary": "puppet-lint",
  "categories": ["linter"],
  "commands": {
    "": {
      "arguments": ["--fix", "$PATH"]
    }
  },
  "description": "Check that your Puppet manifests conform to the style guide",
  "homepage": "https://github.com/puppetlabs/puppet-lint",
  "languages": ["puppet"],
  "packages": {
    "gem": {
      "name": "puppet-lint"
    }
  }
}
