  "homepage": "https://github.com/easy-coding-standard/easy-coding-standard",
  "languages": ["php"],
  "name": "easy-coding-standard",
  "packages": {
    "composer": {
      "binary": "ecs",
      "package": "symplify/easy-coding-standard"
    }
  }
}
