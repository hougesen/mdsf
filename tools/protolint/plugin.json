{
  "$schema": "../tool.schema.json",
  "binary": "protolint",
  "categories": ["linter"],
  "commands": {
    "": {
      "arguments": ["lint", "-fix", "$PATH"],
      "tests": []
    }
  },
  "description": "A pluggable linter and fixer to enforce Protocol Buffer style and conventions",
  "homepage": "https://github.com/yoheimuta/protolint",
  "languages": ["protobuf"],
  "packages": {
    "brew": {
      "package": "protolint",
      "tap": "yoheimuta/protolint"
    },
    "go": {
      "package": "github.com/yoheimuta/protolint/cmd/protolint@latest"
    },
    "npm": {
      "package": "protolint"
    }
  }
}
