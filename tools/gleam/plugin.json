{
  "$schema": "../tool.schema.json",
  "binary": "gleam",
  "categories": ["formatter"],
  "commands": {
    "format": {
      "arguments": ["format", "$PATH"],
      "tests": [
        {
          "language": "gleam",
          "test_input": "pub fn add(a:Int,b:Int)->Int{a+b}",
          "test_output": "pub fn add(a: Int, b: Int) -> Int {\n  a + b\n}\n"
        }
      ]
    }
  },
  "description": "Format Gleam source code",
  "homepage": "https://gleam.run",
  "languages": ["gleam"]
}
