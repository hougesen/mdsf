{
  "$schema": "../tool.schema.json",
  "binary": "tsqllint",
  "categories": ["linter"],
  "commands": {
    "": {
      "arguments": ["--fix", "$PATH"]
    }
  },
  "description": "Configurable linting for TSQL",
  "homepage": "https://github.com/tsqllint/tsqllint",
  "languages": ["sql"],
  "packages": {
    "brew": {
      "package": "tsqllint",
      "tap": "tsqllint/homebrew-tsqllint"
    },
    "dotnet": "TSQLLint",
    "npm": "tsqllint"
  }
}
