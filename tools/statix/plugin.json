{
  "$schema": "../tool.schema.json",
  "binary": "statix",
  "categories": ["linter"],
  "commands": {
    "check": {
      "arguments": ["check", "$PATH"],
      "ignore_output": true
    },
    "fix": {
      "arguments": ["fix", "$PATH"],
      "ignore_output": false
    }
  },
  "description": "lints and suggestions for the nix programming language",
  "homepage": "https://github.com/oppiliappan/statix",
  "languages": ["nix"]
}
