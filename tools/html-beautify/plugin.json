{
  "$schema": "../tool.schema.json",
  "binary": "html-beautify",
  "categories": ["formatter"],
  "commands": {
    "": {
      "arguments": ["-r", "--type", "html", "-f", "$PATH"],
      "ignore_output": false,
      "tests": [
        {
          "language": "html",
          "test_input": "<div>\n                    <p>\n                    Mads was here\n                    </p>\n        </div>",
          "test_output": "<div>\n    <p>\n        Mads was here\n    </p>\n</div>"
        }
      ]
    }
  },
  "description": "A html formatter",
  "homepage": "https://github.com/beautifier/js-beautify?tab=readme-ov-file#css--html",
  "languages": ["html"],
  "packages": {
    "npm": "js-beautify"
  }
}
