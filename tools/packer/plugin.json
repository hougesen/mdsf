{
  "$schema": "../tool.schema.json",
  "binary": "packer",
  "categories": ["formatter"],
  "commands": {
    "fix": {
      "arguments": ["fix", "$PATH"],
      "ignore_output": false
    },
    "fmt": {
      "arguments": ["fmt", "$PATH"],
      "ignore_output": false
    }
  },
  "description": "Packer is used to format HCL2 configuration files",
  "homepage": "https://developer.hashicorp.com/packer/docs/commands",
  "languages": ["hcl"]
}
