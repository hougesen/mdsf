{
  "$schema": "../tool.schema.json",
  "binary": "jsona",
  "categories": ["linter", "formatter"],
  "commands": {
    "format": {
      "arguments": ["format", "$PATH"],
      "ignore_output": false
    },
    "lint": {
      "arguments": ["lint", "$PATH"],
      "ignore_output": false
    }
  },
  "description": "JSONA linter and formatter",
  "homepage": "https://github.com/jsona/jsona",
  "languages": ["jsona"]
}
