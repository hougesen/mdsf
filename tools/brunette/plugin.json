{
  "$schema": "../tool.schema.json",
  "binary": "brunette",
  "categories": ["formatter"],
  "commands": {
    "": {
      "arguments": ["--quiet", "$PATH"],
      "tests": [
        {
          "language": "python",
          "test_input": "def add( a: int ,  b:int)->int: return a+b",
          "test_output": "def add(a: int, b: int) -> int:\n    return a + b\n"
        }
      ]
    }
  },
  "description": "A best practice Python code formatter",
  "homepage": "https://pypi.org/project/brunette",
  "languages": ["python"],
  "packages": {
    "pip": {
      "disable_pipx_run": true,
      "package": "brunette"
    }
  }
}
