{
  "$schema": "../tool.schema.json",
  "binary": "coffeelint",
  "categories": ["linter"],
  "commands": {
    "": {
      "arguments": ["-q", "$PATH"],
      "tests": [
        {
          "language": "coffeescript",
          "test_input": "add = (a, b) -> a + b",
          "test_output": "add = (a, b) -> a + b"
        }
      ]
    }
  },
  "description": "Lint your CoffeeScript",
  "homepage": "https://github.com/coffeelint/coffeelint",
  "languages": ["coffeescript"],
  "packages": {
    "npm": {
      "package": "@coffeelint/cli"
    }
  }
}
