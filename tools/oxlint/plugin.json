{
  "$schema": "../tool.schema.json",
  "binary": "oxlint",
  "categories": ["linter"],
  "commands": {
    "": {
      "arguments": ["--fix", "$PATH"],
      "ignore_output": false
    }
  },
  "description": "Oxlint is designed to catch erroneous or useless code without requiring any configurations by default",
  "homepage": "https://oxc.rs/docs/guide/usage/linter.html",
  "languages": ["javascript", "typescript"],
  "npm": "oxlint"
}
