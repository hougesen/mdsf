{
  "$schema": "../tool.schema.json",
  "binary": "dcm",
  "categories": ["linter", "formatter"],
  "commands": {
    "fix": {
      "arguments": ["fix", "$PATH"],
      "ignore_output": false
    },
    "format": {
      "arguments": ["format", "$PATH"],
      "ignore_output": false
    }
  },
  "description": "Code Quality Tool for Flutter Developers",
  "homepage": "https://dcm.dev/",
  "languages": ["flutter", "dart"]
}
